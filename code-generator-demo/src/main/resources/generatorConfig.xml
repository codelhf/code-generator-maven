<?xml version="1.0" encoding="UTF-8"?>
<!--<!DOCTYPE generatorConfiguration-->
        <!--PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"-->
        <!--"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">-->
<!--标签为对象, property为对象的属性-->
<generatorConfiguration>
    <!--导入配置文件,非必须参数-->
    <properties resource="datasource.properties"/>

    <!--jdbc的数据库连接 -->
    <jdbcConnection>
        <!--driverLocation非必须参数-->
        <property name="driverLocation" value="src/main/resources/mysql-connector-java-5.1.6-bin.jar"/>
        <!--driverClass非必须参数-->
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/lottery?characterEncoding=utf-8"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </jdbcConnection>

    <!--java类型适配-->
    <javaTypeResolver>
        <!-- 当表名或者字段名为SQL关键字的时候，可以设置该属性为true，MBG会自动给表名或字段名添加分隔符  -->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!--
            默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
            true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal
        -->
        <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <!-- optional，旨在创建class时，对注释进行控制 -->
    <commentGenerator>
        <!--代码注释配置-->
        <property name="author" value="liuhf"/>
        <property name="company" value="example"/>
        <property name="responseClass" value="ServerResponse"/>
        <property name="suppressAllComments" value="true"/>
        <property name="suppressDate" value="true"/>
        <property name="dateFormat" value="yyyy-MM-dd HH:mm:ss"/>
        <property name="addRemarkComments" value="true"/>
    </commentGenerator>

    <!--对应模板的配置-->
    <templates>
        <!--名称不能和api中的字段重复,否则被覆盖无效,并且被依赖模块不能注释-->
        <template>
            <property name="common" value="true"/>
            <property name="template" value="vm/0-ExceptionResolver.vm"/>
            <property name="fileName" value="exceptionResolver"/>
            <property name="suffix" value="ExceptionResolver"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.common"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="true"/>
        </template>
        <template>
            <property name="common" value="true"/>
            <property name="template" value="vm/0-Swagger2.vm"/>
            <property name="fileName" value="swagger2"/>
            <property name="suffix" value="Swagger2"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.common"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="true"/>
        </template>
        <template>
            <property name="common" value="true"/>
            <property name="template" value="vm/0-ResponseCode.vm"/>
            <property name="fileName" value="responseCode"/>
            <property name="suffix" value="ResponseCode"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.common"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="true"/>
        </template>
        <template>
            <property name="common" value="true"/>
            <property name="template" value="vm/0-ServerResponse.vm"/>
            <property name="fileName" value="serverResponse"/>
            <property name="suffix" value="ServerResponse"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.common"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="true"/>
        </template>

        <template>
            <property name="template" value="vm/2-Controller.vm"/>
            <property name="fileName" value="controller"/>
            <property name="suffix" value="Controller"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.controller"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/2-Service.vm"/>
            <property name="fileName" value="service"/>
            <property name="suffix" value="Service"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.service"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/2-ServiceImpl.vm"/>
            <property name="fileName" value="serviceImpl"/>
            <property name="suffix" value="ServiceImpl"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.service.impl"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/1-Dao.vm"/>
            <property name="fileName" value="dao"/>
            <property name="suffix" value="Mapper"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.dao"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/1-Entity.vm"/>
            <property name="fileName" value="entity"/>
            <property name="suffix" value=""/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.pojo"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/1-EntityDto.vm"/>
            <property name="fileName" value="entityDTO"/>
            <property name="suffix" value="DTO"/>
            <property name="fileType" value="java"/>
            <property name="directory" value="./src/main/java"/>
            <property name="packageName" value="com.example.generator.demo.dto"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
        <template>
            <property name="template" value="vm/1-Mapper.vm"/>
            <property name="fileName" value="mapper"/>
            <property name="suffix" value="Mapper"/>
            <property name="fileType" value="xml"/>
            <property name="directory" value="./src/main/resources"/>
            <property name="packageName" value="mappers"/>
            <property name="isGenerate" value="true"/>
            <property name="override" value="false"/>
        </template>
    </templates>

    <!-- 数据库对应数据表-->
    <tables>
        <table tableName="lottery_people" domainName="People">
        </table>
        <table tableName="lottery_prize" domainName="Prize">
            <columnOverride columnName="image" jdbcType="VARCHAR"/>
        </table>
    </tables>

    <!-- 数据库对应数据视图-->
    <views>
        <view viewName="lottery_result" domainName="Result">
        </view>
    </views>

    <!-- mybatis插件的搭建 -->
</generatorConfiguration>