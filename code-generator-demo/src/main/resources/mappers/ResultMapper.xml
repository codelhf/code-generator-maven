<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.generator.demo.dao.ResultMapper">
    <resultMap id="BaseResultMap" type="com.example.generator.demo.entity.Result">
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="prize" jdbcType="VARCHAR" property="prize"/>
        <result column="grade" jdbcType="VARCHAR" property="grade"/>
    </resultMap>
    <sql id="Base_Column_List">
        username,phone,prize,grade,
    </sql>
    <select id="selectByPrimaryKey" parameterType="String" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from lottery_result
        where id = #{id, jdbcType=CHAR}
    </select>
    <select id="selectPage" parameterType="com.example.generator.demo.entity.Result" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from lottery_result
        <where>
            <if test="username != null">
                and username like #{username}
            </if>
            <if test="phone != null">
                and phone like #{phone}
            </if>
            <if test="prize != null">
                and prize like #{prize}
            </if>
            <if test="grade != null">
                and grade like #{grade}
            </if>
        </where>
    </select>
</mapper>
